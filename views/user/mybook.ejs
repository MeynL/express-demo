<%- include('../common/head')%>
<%- include('../common/navbar',{title:title})%>
<section class="scrollview">
  <div class="switchtag">
    <span class="switchtag-item curr"><i class="iconfont">&#xe634;</i>&nbsp;小说书架</span>
    <span class="switchtag-item"><i class="iconfont">&#xe634;</i>&nbsp;漫画书架</span>
  </div>
  <div class="title-txt">
    <h2 class="txt-lg">请选择近期阅读的书籍<i class="iconfont" style="display: inline-block;vertical-align: bottom;font-size:.5rem;margin-bottom:-0.08rem">&#xe654;</i></h2>
    <span class="txt-tip">读取阅读进度，再续前缘</span>
  </div>
  <div class="box-list">
    <% for(let i = 0;i<books.length;i++){ %>
    <a class="box-list-item">
      <div class="box-list-img">
        <img src="<%=books[i].img;%>">
      </div>
      <div class="box-list-mes">
        <div class="box-list-title">
          <span><%=books[i].name;%></span>
        </div>
        <div class="box-list-other"></div>
      </div>
    </a>
    <% } %>
  </div>
  <div class="floatutil">
    <i class="iconfont" style="font-size:.38rem;color:#46a79e;">&#xe6a8;</i>
  </div>

</section>
<%- include('../common/tabbottom') %>
